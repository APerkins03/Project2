  <div class="form-container">
    <h1>Application Changes</h1>
    <form action="/myprofile/update" method="POST">
      <div>
        <label for="teamName">Team Name:</label>
        <input type="text" name="teamName" id="teamName" value="{{user.teamName}}">
      </div>
      <div>
        <label for="headCook">Head Cook:</label>
        <input type="text" name="headCook" id="headCook" value="{{user.headCook}}">
      </div>
      <div>
        <label for="fbaNum">HC FBA Member #:</label>
        <input type="number" name="fbaNum" id="fbaNum" value="{{user.fbaNum}}">
      </div>
      <div>
        <label for="address">Address:</label>
        <input type="text" name="address" id="address" value="{{user.address}}">
      </div>
      <div>
        <label for="city">City:</label>
        <input type="text" name="city" id="city" value="{{user.city}}">
      </div>
      <div>
        <label for="state">State:</label>
        <input type="text" name="state" id="state" value="{{user.state}}">
      </div>
      <div>
        <label for="zip">Zip Code:</label>
        <input type="number" name="zip" id="zip" value="{{user.zip}}">
      </div>
      <div>
        <label for="phone">Phone Number:</label>
        <input type="number" name="phone" id="phone" value="{{user.phone}}">
      </div>
      <div>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" value="{{user.email}}">
      </div>
      <button type="submit">Update Application</button>
    </form>

    <form action="/myprofile/delete" method="post">
      <button type="submit" style="margin-top: 10px;">Delete Application</button>
    </form>

    {{#if successMessage}}
      <p class="success-message">{{successMessage}}</p>
    {{/if}}
    {{#if errorMessage}}
      <p class="error-message">{{errorMessage}}</p>
    {{/if}}
